---
import '../styles/global.css'
import NavBar from '../components/NavBar.vue'
import Footer from '../components/Footer.vue'
import SideDrawer from '../components/SideDrawer.vue'
import ScrolltoTop from '../components/ScrolltoTop.vue'

const {pageTitle} = Astro.props
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/assets/momo_head.jpg" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body>
		
	<SideDrawer client:load />
	    <div class="z-0">
			<NavBar client:load  />		
					<div id="wideContainer" class=" rounded-2xl m-5 max-sm:w-[95%]  h-fit w-[90%] mx-auto my-5">
						
						<slot />
					</div>
					<Footer />
		</div>

		<!-- Sticky Scroll-to-Top Button -->
		<ScrolltoTop client:load/>

		<script>
			const currentTheme = localStorage.getItem("userTheme")
			if (currentTheme) {
				let body = document.body
				body.setAttribute("data-theme", currentTheme);

			}
		</script>
		
	</body>
</html>

